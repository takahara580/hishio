<div class="container px-sm-0 px-5" >
  <div class="row my-4">
    <h3>注文履歴一覧</h3>
  </div>
  <div class="row">
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
      <td><%= link_to admin_order_path(order) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.order_details.sum(:amount) %></td>
      <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>
  </div>
</div>