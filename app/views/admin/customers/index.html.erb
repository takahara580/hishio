<div class="container px-sm-0 px-5" >
  <% if flash[:success] %>
    <div class="alert alert-success">
      <%= flash[:success] %>
    </div>
  <% elsif flash[:danger] %>
    <div class="alert alert-danger">
      <%= flash[:danger] %>
    </div>
  <% end %>
  
  <div class="row my-4">
    <h3>会員一覧</h3>
  </div>
  <div class="row">
<table class="table tabel-hover">
  <thead class="thead-light">
    <tr>
      <th class="table-secondary border-dark">会員ID</th>
      <th class="table-secondary border-dark">氏名</th>
      <th class="table-secondary border-dark">メールアドレス</th>
      <th class="table-secondary border-dark">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td class="border-dark"> <%= customer.id %> </td>
      <td class="border-dark">
        <%= link_to admin_customer_path(customer) do %>
          <%= customer.last_name + customer.first_name %>
        <% end %>
      </td>
      <td class="border-dark"><%= customer.email %></td>
      <% if customer.is_active == true %>
        <td class="border-dark"><strong style="color: green;">有効</strong></td>
      <% else %>
        <td class="border-dark"><strong style="color: gray;">退会済</strong></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>


<div class='container'>
  <div class="d-flex justify-content-center">
    <div class="mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>