<div class="row">
  <div class="col-5 mx-auto mt-2">
    <h2 class="head-line title_h2 text-center ">管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="field form-group col-xs-8 mt-4 text-center">
  <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5 form-control-static" ,placeholder: "admin@admin.com"%>
</div>

<div class="field form-group col-xs-8 mt-4 text-center">
  <%= f.label :"パスワード", class: "col-sm-4 control-label" %><%= f.password_field :password, autocomplete: "current-password", class: "col-sm-5 form-control-static" ,placeholder: "admin1"%>
</div>

  <div class="actions col-xs-6 text-center mt-4">
    <%= f.submit "　ログイン　", class: "btn btn-info btn-lg" %>
  </div>
<% end %>
  </div>
</div>
