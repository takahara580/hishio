<div class="container">
  <% if flash[:success] %>
    <div class="alert alert-success">
      <%= flash[:success] %>
    </div>
  <% elsif flash[:danger] %>
    <div class="alert alert-danger">
      <%= flash[:danger] %>
    </div>
  <% end %>
  
    <h4 class="mt-4"> <span class="w-25">会員情報編集</span></h4>
    
    
    <%= form_with model:@customer, url:customers_information_path, method: :patch, local:true do |f| %>
       <div class="row my-3">
        <div class="col-2 offset-md-2"><%= f.label :氏名 %></div>
        <div class="col-3"><%= f.text_field :last_name, class: "form-control" %></div>
        <div class="col-3"><%= f.text_field :first_name, class: "form-control" %></div>
       </div>
       
       <div class="row my-3">
        <div class="col-2 offset-md-2">フリガナ</div>
        <div class="col-3"><%= f.text_field :last_name_kana, class: "form-control" %></div>
        <div class="col-3"><%= f.text_field :first_name_kana, class: "form-control" %></div>
       </div>
       
       <div class="row my-3">
        <div class="col-2 offset-md-2">郵便番号</div>
        <div class="col-3"><%= f.text_field :zip_code, class: "form-control" %></div>
       </div>
       
       <div class="row my-3">
        <div class="col-2 offset-md-2">住所</div>
        <div class="col-5"><%= f.text_field :address, class: "form-control" %></div>
       </div>
       
       <div class="row my-3">
        <div class="col-2 offset-md-2">電話番号</div>
        <div class="col-3"><%= f.text_field :phone_number, class: "form-control" %></div>
       </div>
       
       <div class="row my-3">
        <div class="col-2 offset-md-2">メールアドレス</div>
        <div class="col-3"><%= f.text_field :email, class: "form-control" %></div>
       </div>
       
          <div class="row justify-content-center">
           <div class="col-md-3"><%= f.submit "編集内容を保存", class:"btn btn-success  mr-5" %></div>
           <div class="col-md-3"><%= link_to "退会する", customers_check_path, class:"btn btn-danger ml-5" %></div>
          </div>
    <% end %>
</div>