<div class="container px-sm-0 px-5">
  <div class="row my-4">
    <h3>いいねした商品一覧</h3>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @favorite_items.each do |item| %>
          <tr>
            <td>
              <%= link_to item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.non_taxed_price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active == true %>
              <td><strong style="color: green;">販売中</strong></td>
            <% else %>
              <td><strong style="color: gray;">販売停止中</strong></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class='container'>
      <div class="d-flex justify-content-center">
        <div class="mx-auto">
          <!-- 何か追加のコンテンツがあればここに追加 -->
        </div>
      </div>
    </div>
  </div>
</div>